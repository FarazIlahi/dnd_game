<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="rootPane" prefHeight="800.0" prefWidth="1600.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.dandd_game.Chapter1.SiegeSceneController">
   <children>
      <ImageView fitHeight="800.0" fitWidth="1600.0" pickOnBounds="true">
         <image>
            <Image url="@../images/OldPaper.jpg" />
         </image>
      </ImageView>
      <HBox prefHeight="800.0" prefWidth="1600.0">
         <children>
            <Region prefHeight="800.0" prefWidth="350.0" />
            <VBox prefHeight="800.0" prefWidth="900.0">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="900.0" pickOnBounds="true">
                     <image>
                        <Image url="@../images/enemyCastle.png" />
                     </image>
                  </ImageView>
                  <Region prefHeight="50.0" prefWidth="900.0" />
                  <Label fx:id="siegeText" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="900.0"
                         text="The enemy is breaching the castle walls. Will you hold or flank them?" wrapText="true">
                     <font>
                        <Font name="URWGothic-Book" size="34.0" />
                     </font>
                  </Label>
                  <HBox spacing="30.0" alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#holdWalls" prefHeight="50.0" prefWidth="200.0"
                                style="-fx-background-color: #ffd007; -fx-border-color: #a38a00;" text="Hold the Walls">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#flankEnemy" prefHeight="50.0" prefWidth="200.0"
                                style="-fx-background-color: #ffd007; -fx-border-color: #a38a00;" text="Flank the Enemy">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</Pane>
