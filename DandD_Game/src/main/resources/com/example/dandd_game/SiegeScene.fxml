    <Label fx:id="siegeText" layoutX="100" layoutY="100" maxWidth="600" style="-fx-font-size: 18px; -fx-text-fill: black;" text="The enemy arrives at dawn. What should the first move of defense be?" wrapText="true" />

    <Button fx:id="holdButton" layoutX="190.0" layoutY="188.0" onAction="#holdWalls" text="Hold Castle Walls" />

    <Button fx:id="flankButton" layoutX="379.0" layoutY="188.0" onAction="#flankEnemy" text="Sneak Out and Flank" />

</AnchorPane>
