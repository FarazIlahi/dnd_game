<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="800" prefWidth="1600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dandd_game.Controllers.ThreatDecisionController">

    <Label layoutX="250" layoutY="200" maxWidth="1000" style="-fx-font-size: 24px;" text="You arrive at ancient ruins rumored to hold secrets. What will you do?" wrapText="true" />

    <Button layoutX="250.0" layoutY="320.0" onAction="#exploreRuin" prefHeight="60" prefWidth="300" style="-fx-background-color: #ffd700;" text="Explore the Ruin" />

    <Button layoutX="687.0" layoutY="320.0" onAction="#seekForgottenKingdom" prefHeight="60" prefWidth="300" style="-fx-background-color: #ffd700;" text="Seek Forgotten Kingdom" />
</AnchorPane>
